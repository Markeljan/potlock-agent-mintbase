{
  "openapi": "3.0.0",
  "info": {
    "title": "Potlock API",
    "description": "API for interacting with Potlock operations including projects metadata retrieval and pots.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://potlock-agent-mintbase.vercel.app/"
    }
  ],
  "x-mb": {
    "account-id": "mintbasepotlock.near",
    "assistant": {
      "model": "gpt-4",
      "instructions": "You are helpful Public Good Assistant that specializes in Potlock.org . Given a name  or description , searches for projects or pots in potlock and displays detailed project or pot information . Create smartaction through mintbase when asked to donate project or pot",
      "temperature": 0.5,
      "tools": [
        {
          "type": "generate-transaction"
        }
      ]
    }
  },
  "paths": {
    "/api/projectId/{projectId}": {
      "get": {
        "description": "Fetch metadata for a specific projectId.",
        "operationId": "getAccountIdMetadata",
        "parameters": [
          {
            "in": "path",
            "name": "projectId",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The projectId identifier for which metadata is being requested."
          }
        ],
        "responses": {
          "200": {
            "description": "projectId metadata retrieved successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "index": {
                      "type": "integer"
                    },
                    "name": {
                      "type": "string"
                    },
                    "accountId": {
                      "type": "string"
                    },
                    "category": {
                      "type": "array"
                    },
                    "backgroundImage": {
                      "type": "string"
                    },
                    "image": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "tagline": {
                      "type": "string"
                    },
                    "socialUrl": {
                      "type": "object"
                    },
                    "website": {
                      "type": "string"
                    },
                    "tags": {
                      "type": "array"
                    }
                  },
                  "required": [
                    "index",
                    "accountId",
                    "backgroundImage",
                    "image",
                    "description",
                    "tagline",
                    "socialUrl",
                    "website",
                    "tags"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/api/pot/{potId}": {
      "get": {
        "description": "Fetch metadata for a specific potId.",
        "operationId": "getPotIdMetadata",
        "parameters": [
          {
            "in": "path",
            "name": "potId",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The potId identifier for which metadata is being requested."
          }
        ],
        "responses": {
          "200": {
            "description": "potId metadata retrieved successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "name": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "project": {
                      "type": "array"
                    }
                  },
                  "required": [
                    "id",
                    "name",
                    "description",
                    "project"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/api/donate/{projectId}/{quantity}": {
      "get": {
        "description": "donate directly to project.",
        "operationId": "donateToProject",
        "parameters": [
          {
            "in": "path",
            "name": "projectId",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The identifier for the project in the donate."
          },
          {
            "in": "path",
            "name": "quantity",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The amount of the input token to donate."
          }
        ],
        "responses": {
          "200": {
            "description": "Donate to successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "route": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/donate/pot/{potId}/{projectId}/{quantity}": {
      "get": {
        "description": "donate project on pot",
        "operationId": "donateToPot",
        "parameters": [
          {
            "in": "path",
            "name": "potId",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The identifier for the potId in the donate."
          },
          {
            "in": "path",
            "name": "projectId",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The identifier for the projectId in the donate."
          },
          {
            "in": "path",
            "name": "quantity",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The amount of the input token to donate."
          }
        ],
        "responses": {
          "200": {
            "description": "Donate to successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "route": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
